
<h1><%=@attraction.name%></h1>
<ul>
  <li>Ticket Cost: <%=@attraction.tickets%></li>
  <li>Nausea Rating: <%=@attraction.nausea_rating%></li>
  <li>Happiness Rating: <%=@attraction.happiness_rating%></li>
  <li>Minimum Height to Ride: <%=@attraction.min_height%></li>
</ul>

<%if @current_user.admin%>
  <%=link_to "Edit Attraction", edit_attraction_path %>
<% end %>

<%if !@current_user.admin%>
  <%=form_tag ride_path, method: "POST" do %>
    <%=hidden_field_tag :attraction_id, @attraction.id%>
    <%=submit_tag "Go on this ride"%>
  <% end %>
<% end %>
